        menuToggle.addEventListener('click', () => {
            navLinks.classList.toggle('active');
        });

        // Smooth scrolling for navigation links
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                const target = document.querySelector(this.getAttribute('href'));
                if (target) {
                    target.scrollIntoView({
                        behavior: 'smooth',
                        block: 'start'
                    });
                    navLinks.classList.remove('active');
                }
            });
        });

        // Form submission handling
        const bookingForm = document.getElementById('bookingForm');
        const successModal = document.getElementById('successModal');

        bookingForm.addEventListener('submit', (e) => {
            e.preventDefault();
            
            const formData = new FormData(bookingForm);
            let isValid = true;
            
            // Check required fields
            const requiredFields = ['name', 'phone', 'service', 'description'];
            requiredFields.forEach(field => {
                if (!formData.get(field)) {
                    isValid = false;
                    document.getElementById(field).style.borderColor = '#e74c3c';
                } else {
                    document.getElementById(field).style.borderColor = '#e0e0e0';
                }
            });

            // Phone validation (Indian mobile number)
            const phone = formData.get('phone');
            const phoneRegex = /^[6-9]\d{9}$/;
            if (!phoneRegex.test(phone.replace(/\D/g, '').slice(-10))) {
                isValid = false;
                document.getElementById('phone').style.borderColor = '#e74c3c';
                alert('Please enter a valid 10-digit mobile number.');
                return;
            }

            // Email validation (if provided)
            const email = formData.get('email');
            if (email) {
                const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
                if (!emailRegex.test(email)) {
                    isValid = false;
                    document.getElementById('email').style.borderColor = '#e74c3c';
                    alert('Please enter a valid email address.');
                    return;
                }
            }

            if (isValid) {
                console.log('Form submitted with data:', Object.fromEntries(formData));
                successModal.style.display = 'block';
                bookingForm.reset();
                
                // In a real application, you would send this data to your server
                // Example: sendWhatsAppMessage(formData);
            } else {
                alert('Please fill in all required fields correctly.');
            }
        });

